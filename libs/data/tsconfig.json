{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2022"],
    "moduleResolution": "bundler",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["vitest"]
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "tmp"]
}
