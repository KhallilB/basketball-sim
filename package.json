{
  "name": "@basketball-sim/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "sim": "npx tsx apps/sim-cli/src/main.ts",
    "build:all": "nx run-many --target=build --all",
    "serve": "nx serve sim-cli",
    "serve:dev": "nx serve sim-cli --configuration=development",
    "serve:prod": "nx serve sim-cli --configuration=production",
    "test": "nx test",
    "test:all": "nx run-many --target=test --all",
    "test:math": "nx test math",
    "test:core": "nx test core",
    "lint": "nx lint",
    "lint:all": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "nx reset",
    "graph": "nx graph",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint",
    "validate": "npx tsx apps/sim-cli/src/main.ts --validate --games 100",
    "validate:all": "npx tsx apps/sim-cli/src/main.ts --validate --games 2000",
    "validate:league": "npx tsx apps/sim-cli/src/main.ts --validate --league",
    "validate:help": "npx tsx apps/sim-cli/src/main.ts --help"
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/esbuild": "21.4.0",
    "@nx/eslint": "^21.4.0",
    "@nx/eslint-plugin": "21.4.0",
    "@nx/js": "21.4.0",
    "@nx/node": "^21.4.0",
    "@nx/react": "^21.4.0",
    "@nx/vite": "^21.4.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.13.3",
    "@swc/helpers": "~0.5.11",
    "@types/express": "^4.17.21",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.19.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.4.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "express": "^4.21.2"
  }
}
